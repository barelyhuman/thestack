{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2018", "dom"],
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "sourceMap": false,
    "baseUrl": "./",
    "types": ["./src/types.d.ts"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules"]
}
